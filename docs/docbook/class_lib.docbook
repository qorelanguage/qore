	</varlistentry>
	<varlistentry>
	  <term>Example</term>
	  <listitem>
	    <programlisting>
# open a subdir for working with.
$sd=$d.openDir("mysubdir", "ISO-8859-1");
$sd_list=$sd.list();
            </programlisting>
	  </listitem>
	</varlistentry>

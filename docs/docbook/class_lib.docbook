          <term>Usage</term>
          <listitem>
            <programlisting>HTTPClient::get(<replaceable>path, [headers]</replaceable>)</programlisting>
          </listitem>
        </varlistentry>
        <varlistentry>
          <term>Example</term>
          <listitem>
            <programlisting>$html = $httpclient.get("/path/file.html");</programlisting>

        list Records = (
            ("id": 1, "name": "Gogo", "group": 5, "date": 2016-01-31, "ver": 1),
            ("id": 2, "name": "Bobo", "image": "bobo.jpg", "ver": 3),
            ("id": 3, "name": "Huhu", "ver": 5),

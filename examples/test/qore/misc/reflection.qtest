            n = Namespace::forName("Option");
            Constant c1 = n.getConstant("HAVE_ROUND");
            assertTrue(c1.getValue());
            #map printf("%y %s: %y\n", $1.getModifierList(), $1.getName(), $1.getSourceLocation()), n.getConstants();

            assertEq((), n.getClasses());

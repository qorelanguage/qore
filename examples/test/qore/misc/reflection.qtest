    modNameTests() {
        Class cls = Class::forName("Class");
        assertEq("reflection", cls.getModuleName());

        Namespace ns = Namespace::forName("Reflection");
        assertEq("reflection", ns.getModuleName());
        ns = Namespace::forName("Util");

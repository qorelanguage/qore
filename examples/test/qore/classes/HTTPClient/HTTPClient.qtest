class TempFile {
    private {
        string path;
    }

    constructor(string name, data content) {
        path = sprintf("%s%s%s", tmp_location(), DirSep, name);
        File f();
        f.open2(path, O_CREAT | O_WRONLY | O_TRUNC);
        f.write(content);
    }

    destructor() {
        unlink(path);
    }

    string getPath() {
        return path;
    }
}

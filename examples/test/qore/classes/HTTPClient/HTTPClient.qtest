    serializationTest() {
        HTTPClient hc({"url": "http://user:password@localhost:1080/some/path"});
        assertEq("http://user:password@localhost:1080/some/path", hc.getURL());
        HTTPClient hc2 = Serializable::deserialize(hc.serialize());
        on_error printf("hc: %N\nhc2: %N\n", hc.getHttpConfig(), hc2.getHttpConfig());
        assertEq(hc.getURL(), hc2.getURL());
        assertEq(hc.getHttpConfig(), hc2.getHttpConfig());

        hc.setConnectionPath();
        assertEq("http://user:password@localhost:1080", hc.getURL());
        hc2 = Serializable::deserialize(hc.serialize());
        assertEq(hc.getURL(), hc2.getURL());
        assertEq(hc.getHttpConfig(), hc2.getHttpConfig());
    }

    timeoutTest() {
        HTTPClient hc({"url": "http://localhost"});
        assertEq(300000, hc.getTimeout());
        assertEq(60000, hc.getConnectTimeout());
    }

    preEncodedUrlsTest() {
        RealTestHttpServer serv();
        on_exit delete serv;

        HTTPClient hc({
            "url": "http://localhost:" + serv.getPort(),
            "pre_encoded_urls": True,
        });
        hc.connect();

        assertTrue(hc.getPreEncodedUrls());

        assertEq("hello[]", hc.send(NOTHING, "PUT", "?hello%5B%5D").body);

        assertThrows("URL-ENCODING-ERROR", "\\?hello\\[\\]", \hc.send(), (NOTHING, "PUT", "?hello[]"));

        assertTrue(hc.setPreEncodedUrls());
        assertTrue(hc.setPreEncodedUrls(False));
        assertFalse(hc.getPreEncodedUrls());

        assertEq("hello[]", hc.send(NOTHING, "PUT", "?hello[]").body);
        assertEq("hello%5B%5D", hc.send(NOTHING, "PUT", "?hello%5B%5D").body);
    }

    pollProxyTest() {
        #m_options.proxy = "http://198.59.191.234:8080"; #"http://75.119.130.35:3128";
        if (!m_options.proxy) {
            testSkip("no proxy set");
        }

        {
            HTTPClient hc({
                "url": "http://hq.qoretechnologies.com",
                "proxy": m_options.proxy,
            });

            SocketPollOperation spop = hc.startPollConnect();
            assertEq("connect", spop.getGoal());
            assertEq("connecting", spop.getState());

            while (*hash<SocketPollInfo> info = spop.continuePoll()) {
                #printf("info: %y\n", info);
                Socket::poll((info,), 1s);
            }
            assertEq("connected", spop.getState());
            assertTrue(spop.goalReached());
            assertNothing(spop.getOutput());

            hc.disconnect();
            spop = hc.startPollSendRecv("GET", "/");
            assertEq("received", spop.getGoal());
            assertEq("connecting", spop.getState());

            while (*hash<SocketPollInfo> info = spop.continuePoll()) {
                #printf("info: %y\n", info);
                Socket::poll((info,), 1s);
            }
            assertEq("received", spop.getState());
            assertTrue(spop.goalReached());
            hash<auto> h = spop.getOutput();
            assertEq(200, h."code");

            spop = hc.startPollSendRecv("GET", "/");
            assertEq("received", spop.getGoal());

            while (*hash<SocketPollInfo> info = spop.continuePoll()) {
                #printf("info: %y\n", info);
                Socket::poll((info,), 1s);
            }
            assertEq("received", spop.getState());
            assertTrue(spop.goalReached());
            h = spop.getOutput();
            assertEq(200, h."code");

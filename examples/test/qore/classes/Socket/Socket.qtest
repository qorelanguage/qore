class SocketTest inherits QUnit::Test {
    private {
        auto o;
        auto fam;

        const XString = "This is a binary string";
        const XBinary = Qore::binary(XString);

        Counter counter(1);

        Queue queue();
        Counter stopc();

        int server_port;
        int client_port;

        string client_host;

        const MyOpts = {
            "server"     : "S,server=s",
            "servonly"   : "O,server-only",
            "ipv4"       : "4,ipv4",
            "ipv6"       : "6,ipv6",
            "ssl"        : "s,ssl",

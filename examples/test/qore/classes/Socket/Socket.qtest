    constructor() : QUnit::Test("Socket test", "1.0", \ARGV, MyOpts) {
        process_command_line();

        addTestCase("poll test", \pollTest());
        addTestCase("tls13 test", \tls13Test());
        addTestCase("connection ID", \connectionIdTest());
        addTestCase("Client/Server Socket tests", \clientServerSocketTest());
        addTestCase("Unconnected Socket tests", \unconnectedSocketTest());
        addTestCase("Random Port tests", \randomPortSocketTest());
        addTestCase("SSL read test", \sslReadTest());
        addTestCase("SSL write disconnect test", \sslWriteDisconnectTest());
        set_return_value(main());
    }

    private doServ(Queue q) {
        Socket s0();
        # bind on a random free port
        s0.bind(0);
        s0.listen();
        q.push(s0.getSocketInfo().port);
        s0.setCertificate(TestCert);
        s0.setPrivateKey(TestCert);
        s0.acceptSSL();
    }

    pollTest() {
        Socket s0();
        Socket s1();

        list<hash<SocketPollInfo>> poll_list = (
            <SocketPollInfo>{
                "events": SOCK_POLLIN,
                "socket": s0,
            },
            <SocketPollInfo>{
                "events": SOCK_POLLOUT,
                "socket": s1,
            },
        );

        list<hash<SocketPollInfo>> new_list;

        {
            if (s0.bind("127.0.0.1:0", True)) {
                throw "SOCKET-BIND-ERROR", strerror();
            }
            s0.listen();
            int port = s0.getSocketInfo().port;

            Socket s2();

            {
                SocketPollOperation spop = s2.startPollConnect("-1");
                assertThrows("SOCKET-NON-BLOCK-ERROR", \s2.startPollConnect(), "x");
                assertThrows("SOCKET-NON-BLOCK-ERROR", \s2.connect(), "x");
                assertThrows("SOCKET-NON-BLOCK-ERROR", \s2.startPollSend(), "x");
                assertThrows("SOCKET-NON-BLOCK-ERROR", \s2.startPollRecvString(), 1234);
                assertThrows("SOCKET-NON-BLOCK-ERROR", \s2.startPollRecvBinary(), 1234);
                assertEq("connecting", spop.getState());
                assertThrows("SOCKET-CONNECT-ERROR", \spop.continuePoll());
            }
            {
                SocketPollOperation spop = s2.startPollConnect("65536");
                assertEq("connecting", spop.getState());
                assertThrows("SOCKET-CONNECT-ERROR", \spop.continuePoll());
            }
            assertThrows("SOCKET-NOT-OPEN", \s2.startPollSend(), <abcd>);
            assertThrows("SOCKET-NOT-OPEN", \s2.startPollRecvString(), 1234);
            assertThrows("SOCKET-NOT-OPEN", \s2.startPollRecvBinary(), 1234);

            string target = "127.0.0.1:" + port;
            SocketPollOperation spop = s2.startPollConnect(target);
            assertEq("connect", spop.getGoal());
            assertEq("connecting", spop.getState());
            while (*hash<SocketPollInfo> info = spop.continuePoll()) {
                #printf("info: %y\n", info);
                new_list = Socket::poll((info,), 100ms);
            }
            assertEq("connected", spop.getState());
            assertTrue(spop.goalReached());

            assertTrue(s2.isOpen());
            assertTrue(s0.isOpen());
            assertTrue(s0.isDataAvailable());

            Socket s3 = s0.accept(1ms);
            string test_msg = get_random_string();
            s3.send(test_msg);

            string msg = s2.recv(-1);
            assertEq(test_msg, msg);

            spop = s3.startPollSend(test_msg);
            while (*hash<SocketPollInfo> info = spop.continuePoll()) {
                #printf("send info: %y\n", info);
                new_list = Socket::poll((info,), 1s);
            }

            msg = s2.recv(test_msg.size());
            assertEq(test_msg, msg);

            spop = s3.startPollSend(test_msg);
            while (*hash<SocketPollInfo> info = spop.continuePoll()) {
                #printf("recv info: %y\n", info);
                new_list = Socket::poll((info,), 1s);
            }

            spop = s2.startPollRecvString(test_msg.size());
            while (*hash<SocketPollInfo> info = spop.continuePoll()) {
                #printf("recv info: %y\n", info);
                new_list = Socket::poll((info,), 1s);
            }
            assertEq(test_msg, spop.getOutput());

            s3.send(test_msg);
            spop = s2.startPollRecvBinary(test_msg.size());
            while (*hash<SocketPollInfo> info = spop.continuePoll()) {
                #printf("recv info: %y\n", info);
                new_list = Socket::poll((info,), 1s);
            }
            assertEq(binary(test_msg), spop.getOutput());

            binary bigmsg = get_random_bytes(10 * 1024 * 1024);
            {
                SocketPollOperation spop_send = s3.startPollSend(bigmsg);
                SocketPollOperation spop_recv = s2.startPollRecvBinary(bigmsg.size());
                while (True) {
                    poll_list = ();
                    *hash<SocketPollInfo> info_send = spop_send.continuePoll();
                    if (info_send) {
                        #printf("send info: %y\n", info_send);
                        poll_list += info_send;
                    }
                    *hash<SocketPollInfo> info_recv = spop_recv.continuePoll();
                    if (info_recv) {
                        #printf("recv info: %y\n", info_recv);
                        poll_list += info_recv;
                    }
                    if (!poll_list) {
                        break;
                    }
                    new_list = Socket::poll(poll_list, 1s);
                }
                assertEq(bigmsg, spop_recv.getOutput());
            }

            Socket s4();
            if (s4.bind("127.0.0.1:0", True)) {
                throw "SOCKET-BIND-ERROR", strerror();
            }
            int port2 = s4.getSocketInfo().port;
            s4.close();
            s4.shutdown();
            target = "127.0.0.1:" + port2;
            spop = s2.startPollConnect(target);
            assertEq("connect", spop.getGoal());
            assertEq("connecting", spop.getState());
            {
                on_error printf("target %y\n", target);
                assertThrows("SOCKET-CONNECT-ERROR", sub () {
                    while (*hash<SocketPollInfo> info = spop.continuePoll()) {
                        Socket::poll((info,), 1s);
                    }
                });
            }

            spop = s2.startPollConnectSsl(target);
            assertEq("connect-ssl", spop.getGoal());
            assertEq("connecting", spop.getState());
            assertThrows("SOCKET-CONNECT-ERROR", sub () {
                while (*hash<SocketPollInfo> info = spop.continuePoll()) {
                    Socket::poll((info,), 1s);
                }
            });

            {
                msg = get_random_string();

                Queue q();
                background sub () {
                    Socket ssl();
                    # bind on a random free port
                    ssl.bind(0);
                    ssl.listen();

                    q.push(ssl.getSocketInfo().port);

                    ssl.setCertificate(TestCert);
                    ssl.setPrivateKey(TestCert);

                    Socket ns = ssl.acceptSSL();
                    SocketPollOperation spop0 = ns.startPollSend(msg);
                    while (*hash<SocketPollInfo> info = spop0.continuePoll()) {
                        #printf("send info: %y\n", info);
                        Socket::poll((info,), 1s);
                    }

                    spop0 = ns.startPollSend(msg);
                    while (*hash<SocketPollInfo> info = spop0.continuePoll()) {
                        #printf("send info: %y\n", info);
                        Socket::poll((info,), 1s);
                    }

                    spop0 = ns.startPollSend(msg);
                    while (*hash<SocketPollInfo> info = spop0.continuePoll()) {
                        #printf("send info: %y\n", info);
                        Socket::poll((info,), 1s);
                    }

                    spop0 = ns.startPollSend(bigmsg);
                    while (*hash<SocketPollInfo> info = spop0.continuePoll()) {
                        #printf("send info: %y\n", info);
                        Socket::poll((info,), 1s);
                    }
                }();

                int port3 = q.get();

                target = "127.0.0.1:" + port3;
                spop = s2.startPollConnectSsl(target);
                assertEq("connect-ssl", spop.getGoal());
                assertEq("connecting", spop.getState());
                while (*hash<SocketPollInfo> info = spop.continuePoll()) {
                    #printf("recv info: %y\n", info);
                    new_list = Socket::poll((info,), 1s);
                }
                assertEq("connected", spop.getState());
                assertTrue(spop.goalReached());
                assertNothing(spop.getOutput());
                assertEq(msg, s2.recv(msg.size()));

                spop = s2.startPollRecvString(msg.size());
                while (*hash<SocketPollInfo> info = spop.continuePoll()) {
                    #printf("recv info: %y\n", info);
                    new_list = Socket::poll((info,), 1s);
                }
                assertEq(msg, spop.getOutput());

                spop = s2.startPollRecvBinary(msg.size());
                while (*hash<SocketPollInfo> info = spop.continuePoll()) {
                    #printf("recv info: %y\n", info);
                    new_list = Socket::poll((info,), 1s);
                }
                assertEq(binary(msg), spop.getOutput());

                spop = s2.startPollRecvBinary(bigmsg.size());
                while (*hash<SocketPollInfo> info = spop.continuePoll()) {
                    #printf("recv info: %y\n", info);
                    new_list = Socket::poll((info,), 1s);
                }
                assertEq(bigmsg, spop.getOutput());
            }

            {
                Queue q();
                background sub () {
                    Socket ssl();
                    # bind on a random free port
                    ssl.bind(0);
                    ssl.listen();

                    q.push(ssl.getSocketInfo().port);

                    ssl.accept();
                }();

                int port3 = q.get();

                target = "127.0.0.1:" + port3;
                spop = s2.startPollConnectSsl(target);
                assertEq("connect-ssl", spop.getGoal());
                assertEq("connecting", spop.getState());
                on_error printf("goal reached: %y state: %y output: %y\n", spop.goalReached(), spop.getState(), spop.getOutput());
                assertThrows("SOCKET-SSL-ERROR", sub () {
                    *hash<SocketPollInfo> info;
                    do {
                        info = spop.continuePoll();
                        if (info) {
                            Socket::poll((info,), 250ms);
                        }
                    } while (info);
                });
                assertFalse(spop.goalReached());
                assertNothing(spop.getOutput());
            }
        }

        # bind and listen again
        if (s0.bind("127.0.0.1:0", True)) {
            throw "SOCKET-BIND-ERROR", strerror();
        }
        s0.listen();
        int port = s0.getSocketInfo().port;

        s1.connect("127.0.0.1:" + port);
        Socket s2 = s0.accept();
        string test_msg = get_random_string();
        s2.send(test_msg);

        poll_list = (
            <SocketPollInfo>{
                "events": SOCK_POLLIN,
                "socket": s1,
            },
            <SocketPollInfo>{
                "events": SOCK_POLLOUT,
                "socket": s2,
            },
        );

        new_list = Socket::poll(poll_list, 5s);
        assertEq(2, new_list.size());
        assertEq(SOCK_POLLIN, new_list[0].events);
        assertEq(s1, new_list[0].socket);
        assertEq(SOCK_POLLOUT, new_list[1].events);
        assertEq(s2, new_list[1].socket);

        poll_list = (
            <SocketPollInfo>{
                "events": SOCK_POLLIN | SOCK_POLLOUT,
                "socket": s1,
            },
            <SocketPollInfo>{
                "events": SOCK_POLLIN | SOCK_POLLOUT,
                "socket": s2,
            },
        );

        new_list = Socket::poll(poll_list, 5s);
        assertEq(2, new_list.size());
        assertEq(SOCK_POLLIN | SOCK_POLLOUT, new_list[0].events);
        assertEq(s1, new_list[0].socket);
        assertEq(SOCK_POLLOUT, new_list[1].events);
        assertEq(s2, new_list[1].socket);

        string msg = s1.recv(-1);
        assertEq(test_msg, msg);

        new_list = Socket::poll(poll_list, 5s);
        assertEq(2, new_list.size());
        assertEq(SOCK_POLLOUT, new_list[0].events);
        assertEq(s1, new_list[0].socket);
        assertEq(SOCK_POLLOUT, new_list[1].events);
        assertEq(s2, new_list[1].socket);

        s1.close();
        assertThrows("SOCKET-NOT-OPEN", \Socket::poll(), (poll_list, 0s));

        new_list = poll_list;
        remove new_list[0].socket;
        assertThrows("SOCKET-POLL-ERROR", \Socket::poll(), (new_list, 1s));

        shift poll_list;
        new_list = poll_list;
        new_list[0].events = 0;
        assertThrows("SOCKET-POLL-ERROR", \Socket::poll(), (new_list, 1s));

        delete s2;
        assertThrows("OBJECT-ALREADY-DELETED", \Socket::poll(), (poll_list, 1s));

        # close socket in background
        s1.connect("127.0.0.1:" + port);
        s2 = s0.accept();

        Counter cnt(1);
        Queue q();
        code poll = sub () {
            list<hash<SocketPollInfo>> new_poll_list = (
                <SocketPollInfo>{
                    "events": SOCK_POLLIN,
                    "socket": s1,
                },
                <SocketPollInfo>{
                    "events": SOCK_POLLIN,
                    "socket": s2,
                },
            );
            cnt.dec();
            try {
                q.push(Socket::poll(new_poll_list, 500ms));
            } catch (hash<ExceptionInfo> ex) {
                q.push(ex);
            }
        };
        background poll();
        cnt.waitForZero();
        usleep(250ms);
        delete s1;
        auto v = q.get();
        on_error {
            printf("%y\n", v.fullType());
            map printf("%d: events: %y\n", $#, $1.events), v;
        }
        assertEq(SOCK_POLLERR, v[0].events);
    }


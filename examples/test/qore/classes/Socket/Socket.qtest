    clientServerSocketTest() {
        # create event queue and start listening thread if necessary
        if (m_options.events)
            background listen();

        if (!exists m_options.server) {
            stopc.inc();
            background server_thread();
        }
        if (!m_options.servonly) {
            stopc.inc();
            background client_thread();

        private int insertFromIteratorIntern(Qore::AbstractIterator i, *hash opt) {
            # check upsert options
            validateOptionsIntern("OPTION-ERROR", getInsertFromIteratorOptions(), \opt);

            if (!i.next())
                return 0;

            # get initial row
            hash row = i.getValue();

            # make insert statement template
            string sql = sprintf("insert into %s (%s) values (%s)", getSqlName(), (foldl $1 + "," + $2, (map getColumnSqlName($1), row.keyIterator())),
                                 (foldl $1 + "," + $2, (map "%v", row.keyIterator())));
            SQLStatement stmt(ds);
            stmt.prepare(sql);

            opt.change_count = 0;
            int rc = 0;
            do {
                execData(stmt, opt, row.values());
                if (opt.info_callback)
                    opt.info_callback(getSqlName(), row, UR_Inserted);
                ++rc;

                if (opt.commit_block) {
                    if (++opt.change_count >= opt.commit_block) {
                        ds.commit();
                        opt.change_count = 0;
                    }
                }
            } while (i.next() && (row = i.getValue()));

            return rc;
        }


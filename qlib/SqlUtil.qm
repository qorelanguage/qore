            # try to get initial row
            if (!i.next())
                return;

            # result hash
            hash rh;

            # primary key value hash for "delete_others"
            hash pkh;

            hash row = i.getValue();
            code upsert = getUpsertClosure(row, upsert_strategy, opt);


            string sql;
            AbstractCheckConstraint cc = addCheckConstraintUnlocked(cname, src, copt, \sql);
            on_success if (opt.sql_callback_executed) {
                # set as constraint for the table
                if (!constraints)
                    constraints = new Constraints();

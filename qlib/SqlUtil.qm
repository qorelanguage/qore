            list pkl = primaryKey.keys();
            foreach hash row in (getRowIterator()) {
                string k = foldl $1 + "-" + $2, (map row.$1.toString(), pkl);
                if (pkh{k})
                    continue;

                hash h = row{pkl};
                self.del(h);

                ++rh.deleted;
                if (opt.info_callback)
                    opt.info_callback(getSqlName(), row, UR_Deleted);
                if (opt.commit_block) {
                    if (++opt.change_count >= opt.commit_block) {
                        ds.commit();
                        opt.change_count = 0;
                    }
                }
            }

            return rh;
        }


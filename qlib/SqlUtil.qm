                    opt.info_callback(getSqlName(), row, code);

                if (code != UR_Unchanged && opt.commit_block) {
                    if (++opt.change_count >= opt.commit_block) {
                        ds.commit();
                        opt.change_count = 0;
                    }
                }

                # save primary key value in primary key hash if "delete_others" is set

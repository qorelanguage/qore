        bool doDrop(*softlist l, string type, string name, *hash opt) {
            if (l) {
                AbstractDatabase::doCallback(opt, l, AC_Drop, type, name);
                on_success ds.commit();
                on_error ds.rollback();
                map ds.execRaw($1), l;
                return True;

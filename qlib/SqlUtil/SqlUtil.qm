    public const DefaultExpressionMap = {
        # first the "AND" and "OR" "operators"
        DP_OP_AND: {
            "exp": AbstractDataProvider::GenericExpressions{DP_OP_AND},
            "code": string sub (reference<hash<QueryInfo>> info, int role, list<auto> args) {
                return "("
                    + (foldl $1 + " and " + $2,
                        (map info.table.getExpressionArg(\info, role, $1, AbstractDataProviderTypeMap."bool"), args))
                    + ")";
            },
        },
        DP_OP_OR: {
            "exp": AbstractDataProvider::GenericExpressions{DP_OP_OR},
            "code": string sub (reference<hash<QueryInfo>> info, int role, list<auto> args) {
                return "("
                    + (foldl $1 + " or " + $2,
                        (map info.table.getExpressionArg(\info, role, $1, AbstractDataProviderTypeMap."bool"), args))
                    + ")";
            },
        },
        OP_LIKE: {
            "exp": <DataProviderExpressionInfo>{
                "type": DET_Operator,
                "label": "like",
                "name": "like",
                "desc": "The value to bind as the 'like' value (ex: '%some string%')",
                "symbol": "like",
                "args": (
                    DataProviderSignatureStringType,
                    DataProviderSignatureStringValueType,
                ),
                "return_type": AbstractDataProviderTypeMap."bool",
            },
            "code": string sub (reference<hash<QueryInfo>> info, int role, list<auto> args) {

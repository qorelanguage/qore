        private string getFromIntern(string from, *hash qh) {
            # grep from clause with optional hints
            string hstr = from;
            *hash hh = !is_sybase ? FreetdsQueryHints : NOTHING;
            list l;
            foreach string hint in (qh.queryhint) {
                if (!hh{hint})
                    throw "QUERYHINT-ERROR", sprintf("unknown hint %y; known hints: %y", hint, hh.keys());
                l += hint;
            }
            if (l)
                hstr += " with (" + (foldl $1 + "," + $2, l) + ")";
            #printf("from: %y opt: %y hstr: %y\n", from, qh, hstr);
            return hstr;
        }

